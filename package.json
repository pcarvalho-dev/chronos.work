{
  "name": "chronos_work",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev": "npm run docs:gen && nodemon --exec tsx src/index.ts",
    "start": "npm run docs:gen && tsx src/index.ts",
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "docs:gen": "tsx scripts/generate-openapi.ts",
    "check:db": "node scripts/check-db-config.js",
    "typeorm": "node --loader ts-node/esm ./node_modules/typeorm/cli.js -d src/database/data-source.ts",
    "migration:run": "npm run check:db && npm run typeorm -- migration:run",
    "migration:run:prod": "npm run check:db && node scripts/run-migrations.js",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:gen": "npm run typeorm -- migration:generate src/database/migrations/%npm_config_name% -t src/database/migration-template.ts",
    "docker:build": "docker build -t chronos-work-api .",
    "docker:run": "docker run -p 8000:8000 --env-file .env chronos-work-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:restart": "docker-compose restart app",
    "docker:shell": "docker-compose exec app sh",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@scalar/express-api-reference": "^0.8.22",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "react-router-dom": "^7.9.4",
    "redoc-express": "^2.1.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27",
    "uuid": "^13.0.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@faker-js/faker": "^10.1.0",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.2",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "express-openapi-validator": "^5.6.0",
    "msw": "^2.12.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.15",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  }
}
